<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="">The question (600 characters max)</label>
    <%= form.text_area :body, class: "textarea is-light", rows: "3", maxlength: 600, required: true, placeholder: "What do people think about the color purple?" %>
  </div>

  <div class="field">
    <label for="">Topics for this question (100 characters max)</label>
    <%= form.text_field :tags, class: "input is-light", maxlength: 100, required: true,  placeholder: "purple, color" %>
  </div>

  <div class="actions">
    <%= form.submit "submit", class: "button is-primary" %>
  </div>
<% end %>