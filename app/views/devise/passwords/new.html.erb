


<br><br>
<div class="section">
  <div class="container">
  <div class="columns">
  <div class="column is-3"></div>
  <div class="column">
  <div class="box">
    <div class="card-content">
    <h2 class="title is-4 th-700">Forgot your password?</h2>
    <p class="subtitle">Happens to all of us. Send yourself reset instructions.</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary" %>
  </div>

  <div class="actions">
    <%= f.submit "Send", class: "button is-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
  </div>
  <div class="column is-3"></div>
</div>
  </div>
</div>
